
<%- include('../partials/head') %>
<section id="join" class="container my-5">
    <!-- flash message -->
    <%- include('../partials/flash')  %> 
    <div class="row">
        <div class="col-md-4 px-5  mt-5 d-none d-sm-block offset-md-2">
            <div class="join_banner_text">
                <h1>JOIN THE NEW GROWING COMMUNITY OF ARTISTS</h1>
                <p>Find inspirations and techniques, and become a better artist. Everything an artist need in one site</p>
            </div>
        </div>
        
        <div class="col-md-4  px-5">
            <!-- <i class="fas fa-github fa-5x" ></i> -->
            <p style="text-align:end">
                <a href="/arts">
                <i class="fas fa-times fa-2x ml-auto"></i>
                </a>
            </p>
            
            <h4>Log in</h4>
            <p>Become a member. <a id='loginBtn' href="/users/new">Join</a></p>
            <form action="/users/login" method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" name="username" class="form-control">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-success my-4 px-3">Join</button>
            </form>
        </div>
    </div>
    
</section>
