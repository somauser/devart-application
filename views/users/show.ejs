<%- layout('layouts/boilerplate')  %> 
<div class="jumbotron cover-image" style="background-image: url('/images/favicon.png');">
    <div class="container">
        <div class="user-container">
            <img src="<%= user.Bio.profileImage.url %>" alt="" class="user-profile-img">
            <div class="user-profile-text my-5">
                <h3><%= user.username.toUpperCase() %> </h3>
            </div>
        </div>
    </div>
</div>
<!-- arts -->
<section class="container">
    <div class="row my-5">
        <div class="col-md-8">
            <p class="display-5">Paintings by <%= user.username %></p>
            <div class="row">
                <% arts.forEach(art => { %>
                    <div class="col-sm-4">
                        <a href="/arts/<%= art._id %>">
                            <img src="<%= art.imageURL.url %> " alt="" class="img-fluid">
                        </a>
                        <!-- <p><%= art.title %> </p> -->
                    </div>
                <% }) %>
            </div>

        </div>
        <div class="col-md-4">
            <h5>Bio</h5>
            <p><%= user.Bio.text %></p>
        </div>
    </div>
</section>